    "@types/multer": "^2.0.0",
    "@types/node": "^22.18.6",
    "@types/nodemailer": "^6.4.17",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "dotenv": "^17.2.2",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
