  "_moduleAliases": {
    "@": "dist"
  },
  "scripts": {
    "dev": "nodemon --watch 'src/**/*.ts' --exec \"node --env-file=.env.local -r ts-node/register -r tsconfig-paths/register src/app.ts\"",
    "dev:worker": "nodemon --watch 'src/**/*.ts' --exec \"node --env-file=.env.local -r ts-node/register -r tsconfig-paths/register src/jobs/invoiceWorker.ts\"",
    "build": "tsc",
    "start": "node -r module-alias/register dist/app.js",
    "start:api": "node -r module-alias/register dist/app.js",
    "start:worker": "node -r module-alias/register dist/jobs/invoiceWorker.js",
    "worker:invoice": "node -r module-alias/register dist/jobs/invoiceWorker.js"
  },
  "dependencies": {
