    "cors": "^2.8.5",
    "express": "^4.21.2",
    "google-auth-library": "^9.15.1",
    "ioredis": "^5.7.0",
    "jose": "^6.0.10",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "mongoose": "^8.10.0",
    "multer": "^2.0.2",
    "nodemailer": "^6.10.0",
    "puppeteer": "^24.17.1",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
